{% extends 'base.html.twig' %}

{% block body %}
    <div class="table-listing row">
        <div class="col-12">
            {% include 'components/pagination.html.twig' with {route: path('table_index') } %}
        </div>
        {% for table in tables %}
            <div class="col-12 col-md-6 col-lg-3 mb-2 mt-2">
                <div class="card"
                     style="background-color: {{ table.rarity.color }}">
                    <div class="card-body">
                        <div class="card-title h3">{{ table.name }}</div>
                        {% if table.parent %}<div class="card-subtitle">{{ item.parent.name }}</div>{% endif %}
                        <p class="card-text">{{ table.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}