{% extends 'base.html.twig' %}

{% block body %}
    <div class="item-listing row">
        {% for item in items %}
            <div class="col-12 col-md-6 col-lg-3 mb-2 mt-2">
                <div class="card"
                     style="background-color: {{ item.rarity.color }}">
                    <div class="card-body">
                        <h1 class="card-title">{{ item.name }}</h1>
                        <p class="card-text">{{ item.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}