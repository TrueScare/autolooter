{% extends 'base.html.twig' %}

{% block body %}
    <div class="item-listing row">
        <div class="col-12">
            {% include 'components/pagination.html.twig' with {route: path('item_index') } %}
        </div>
        {% for item in items %}
            <div class="col-12 col-md-6 col-lg-3 mb-2 mt-2">
                <div class="card"
                     style="background-color: {{ item.rarity.color }}">
                    <div class="card-body">
                        <div class="card-title h3">{{ item.name }}</div>
                        <div class="card-subtitle">{{ item.parent.name }}</div>
                        <p class="card-text">{{ item.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}