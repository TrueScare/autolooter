{% block card_basic %}
    {% if entity.color|default %}
        {% set color = entity.color %}
    {% else %}
        {% set color = entity.rarity.color %}
    {% endif %}

    <div class="col-12 col-md-6 col-lg-3 mb-2 mt-2">
        <div class="card" style="border-color:{{ color }}">
            {% block card_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}