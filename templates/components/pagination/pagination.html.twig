{% block pagination_filter_pageselect %}
    <div class="col-12 col-lg-6">
        <div class="row align-items-center">
            <div class="col-4">
                <button name="page"
                        class="w-100 btn btn-primary previous {% if (page - 1) <= 0 %}disabled{% endif %}"
                        value="{{ page - 1 }}"
                        aria-label="{{ "pagination.previous"|trans }}"
                        data-pagination-target="paginationPrevious"
                        data-action="click->pagination#pagePrevious"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
                </button>
            </div>
            <div class="page-display col-4 text-center">
                {{ page }} / {{ (maxItemsFound/pageSize)|round(0,'ceil') }}
            </div>
            <input name="page_current"
                   type="hidden"
                   value="{{ page }}"
                   data-pagination-target="paginationCurrent"
            >
            <div class="col-4">
                <button name="page"
                        class="w-100 btn btn-primary next {% if (page + 1) > (maxItemsFound/pageSize)|round(0,'ceil') %}disabled{% endif %}"
                        value="{{ page + 1 }}"
                        aria-label="{{ "pagination.next"|trans }}"
                        data-pagination-target="paginationNext"
                        data-action="click->pagination#pageNext"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
{% endblock %}